<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Switch
        android:id="@+id/photo_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="50dp"
        android:text="fotka/video:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Sekvencne fotenie(1-7 snimok): "
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_video" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/photos_number"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:hint="1-7"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="PIR citlivost(1-3):"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/PIR_sensitivity"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="1-3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Switch
        android:id="@+id/delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Oneskorenie:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cas:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/delay"
        app:layout_constraintTop_toBottomOf="@+id/delay" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Dlzka videa(5-60s): "
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/video_length"
        android:layout_width="52dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:hint="5-60"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Stav:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="64dp"
        android:text="@android:string/ok"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/send_photos_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poslat"
        app:layout_constraintStart_toEndOf="@+id/photos_number"
        app:layout_constraintTop_toTopOf="@+id/photos_number" />

    <Button
        android:id="@+id/send_PIR_sensitivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POSLAT"
        app:layout_constraintStart_toEndOf="@+id/PIR_sensitivity"
        app:layout_constraintTop_toTopOf="@+id/PIR_sensitivity" />

    <Button
        android:id="@+id/send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POSLAT"
        app:layout_constraintStart_toEndOf="@+id/time_m_layout"
        app:layout_constraintTop_toTopOf="@+id/time_m_layout" />

    <Button
        android:id="@+id/send_video_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POSLAT"
        app:layout_constraintStart_toEndOf="@+id/video_length"
        app:layout_constraintTop_toTopOf="@+id/video_length" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="H:"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="M:"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/delay" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/time_h_layout"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/delay">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/time_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hodina" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/time_m_layout"
        android:layout_width="67dp"
        android:layout_height="56dp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/delay">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/time_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="minuta" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/phototrap_changer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vybrat fotopascu"
        app:layout_constraintBottom_toTopOf="@+id/photo_video"
        app:layout_constraintStart_toStartOf="@+id/photo_video" />

</androidx.constraintlayout.widget.ConstraintLayout>